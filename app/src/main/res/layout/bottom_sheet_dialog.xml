<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBottomsheet"
    android:background="@color/blue_shade_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register ID"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/idTVregisterID"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/idTVFullName"
        android:layout_below="@id/idTVregisterID"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Number"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/idTVaccountNum"
        android:layout_below="@id/idTVFullName"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idTVaccountNum"
        >

        <Button
            android:id="@+id/idBTNeditPdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Edit Payment Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="#24DA04" />




    </LinearLayout>

</RelativeLayout>