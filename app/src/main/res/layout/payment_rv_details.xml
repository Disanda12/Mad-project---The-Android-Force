<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_shade_2"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register ID :- "
            android:id="@+id/idTVregID"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name :- "
            android:id="@+id/idTVfName"
            android:layout_below="@id/idTVregID"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address :- "
            android:id="@+id/idTVAddress"
            android:layout_below="@id/idTVfName"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Number :- "
            android:id="@+id/idTVaccNumber"
            android:layout_below="@id/idTVAddress"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>